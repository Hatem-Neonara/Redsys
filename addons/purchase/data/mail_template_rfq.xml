<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_edi_purchase_rfq" model="mail.template">
            <field name="name">Purchase: Request For Quotation</field>
            <field name="model_id" ref="purchase.model_purchase_rfq"/>
            <field name="subject">RED SYS Request for Quotation ({{ object.name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="description">Sent manually to vendor to request a quotation</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear Supplier,

                        <br/>
                        <br/>
                        I hope you're doing well.
                        <br/>
                        <br/>
                        Here is in attachment a request for quotation
                        <span style="font-weight:bold;" t-out="object.name or ''"></span>
                        from REDSYS.
                        <br/>
                        <br/>
                       We would like to request a quotation for your products.
                        <br/>
                        Please send us your best offer at your earliest convenience.
                        <br/>
                        <br/>
                        Feel free to contact us if you need any further information.
                        <br/>
                        <br/>

                        Best regards,
                        <br/>
                        <t t-if="not is_html_empty(object.user_id.signature)">
                            <br/>
                            <br/>
                            <t t-out="object.user_id.signature or ''">--<br/>
                            </t>
                        </t>
                    </p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4, ref('purchase.report_purchase_quotation'))]"/>
            <field name="lang">{{ object.partner_id.lang}}</field>
            <field name="auto_delete" eval="True"/>
        </record>

